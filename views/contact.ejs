<%- include('layout/header') %>

<div class="contact-top">
    
</div>

<main class="container">
    <div class="row align-items-center bg-white rounded-top justify-content-lg-center" >
        <div class="col-sm-4 px-5 py-2">
            <p class="h1">Get In Touch</p>
            <p>Robert Gordon University, Garthdee House, Garthdee Road, Aberdeen, AB10 7QB
            </p>    
            <p><i class="fa-solid fa-envelope-open-text me-2"></i>grouptlj@cm2104.rgu.ac.uk</p>
            <p><i class="fa-solid fa-phone-volume me-2"></i>+44-123-4567-890</p>  
            <p>
                <span class="fw-bold"><i class="fa-solid fa-clock me-2"></i>OPENING HOURS</span> <br>
                Monday - Friday: 9:00am - 6:00pm <br>
                Saturday: 11:00am - 5:00pm <br>
                Sunday: 12:00pm - 5:00pm
            </p>
        </div>
        <div class="col-sm-8">
            <div class="container my-3">
                <div class="row justify-content-lg-center">
                  <div class="col-12 col-lg-9">
                    <div class="bg-white border rounded shadow-sm overflow-hidden">
          
                      <% if (message) { %>
                        <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                          <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                          <strong><%= message.message %></strong>
                        </div>
                      <% } %>
                      <form action="#!">
                        <div class="row gy-0 gy-xl-2 p-2 p-xl-5">
                            <div class="col-12 col-md-12">
                                <input type="text" class="form-control" id="first_name" name="first_name" placeholder="Enter first name" required>
                            </div>
                            <div class="col-12 col-md-12">
                                <input type="text" class="form-control" id="last_name" name="last_name" placeholder="Enter last name" required>
                            </div>
                          <div class="col-12 col-md-12">
                            <div class="input-group">
                              <span class="input-group-text">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                                  <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z" />
                                </svg>
                              </span>
                              <input type="email" class="form-control" id="email" name="email" placeholder="someone@email.com" required>
                            </div>
                          </div>
                          <div class="col-12">
                            <input type="text" placeholder="Enter subject" class="form-control" id="subject">
                          </div>
                          <div class="col-12">
                            <textarea class="form-control" id="message" name="message" rows="3" required></textarea>
                          </div>
                          <div class="col-12">
                            <div class="d-grid">
                              <button class="btn btn-dark btn-lg bg-black" type="submit">Submit</button>
                            </div>
                          </div>
                        </div>
                      </form>
            
                    </div>
                  </div>
                </div>
              </div>
        </div>
</main>

<%- include('layout/footer') %>