<%- include('../layout/header') %>

<main class="container-fluid">
    <div class="text-center">
        <h1 class="display-1 mt-2">Signup</h1>
    </div>
    
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
          <div class="col-12 col-md-9 col-lg-7 col-xl-6">
            <div class="card mt-2 mb-3" style="border-radius: 15px;">
              <div class="card-body p-4"> 
                <% if (message) { %>
                  <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                    <strong><%= message.message %></strong>
                  </div>
                <% } %>
                <form method="post" action="/auth/form/register">
                  <div class="form-outline mb-2">
                      <label class="form-label" for="form3Example1cg">Username</label>
                    <input type="text" id="form3Example1cg" class="form-control form-control-lg" 
                    pattern="[a-z]+" title="Please enter lowercase alphabets only"
                    name="username" required />
                  </div>
  
                  <div class="form-outline mb-2">
                      <label class="form-label" for="form3Example3cg">Your Email</label>
                    <input type="email" id="form3Example3cg" class="form-control form-control-lg" name="email" required />
                  </div>
  
                  <div class="form-outline mb-2">
                      <label class="form-label" for="form3Example4cg">Password</label>
                    <input type="password" id="form3Example4cg" class="form-control form-control-lg" name="password" required />
                  </div>
  
                  <div class="d-flex justify-content-center">
                    <button type="submit"
                      class="btn btn-dark btn-lg bg-black">Register</button>
                  </div>
  
                  <p class="text-center text-muted mt-2 mb-0">Have already an account? <a href="/auth/login"
                      class="fw-bold text-body"><u>Login here</u></a></p>
                </form>
  
              </div>
            </div>
          </div>
        </div>
      </div>
</main>

<%- include('../layout/footer') %>